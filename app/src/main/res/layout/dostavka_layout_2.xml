<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:foreground="@drawable/stroked_course_image_placeholder"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photo_view"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/yandex_car_icon"
            android:background="@drawable/background_radius_filled_16"
            android:backgroundTint="@color/colorF5F5F5"
            android:layout_margin="@dimen/grid_1_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/plan_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Start"
            android:layout_marginStart="@dimen/grid_1_5"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/photo_view"
            app:layout_constraintTop_toTopOf="@+id/photo_view" />

        <TextView
            android:id="@+id/cost_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="18000 sum"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/photo_view"
            app:layout_constraintStart_toStartOf="@+id/plan_text_view"
            app:layout_constraintTop_toBottomOf="@+id/plan_text_view" />

        <View
            android:id="@+id/view12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/grid_1_5"
            android:background="#FAFAFA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cost_text_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adress_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_1_5"
            android:drawableLeft="@drawable/dot_oval_drawable"
            android:fontFamily="@font/roboto_regular"
            android:text="Zangiota,Daliguzar,10-uy"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/view12"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/change_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/grid_1_5"
            android:layout_marginTop="@dimen/grid_1"
            android:layout_marginBottom="@dimen/grid_1_5"
            android:background="@drawable/background_radius_filled_16"
            android:backgroundTint="#1000"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/grid_0_5"
            android:text="Change"
            android:textColor="#666"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view12"
            app:layout_constraintTop_toBottomOf="@+id/adress_text_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>