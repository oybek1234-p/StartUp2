<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.example.market.model.Product" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:clipToPadding="false"
        android:background="@drawable/bottom_sheet_background"
        >

        <ImageView
            android:id="@+id/close_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="@dimen/grid_1_5"
            android:layout_margin="4dp"
            android:src="@drawable/ic_close_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/grid_1"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:id="@+id/photo_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                url="@{data.photo}"
                fade="@{true}"
                android:scaleType="centerCrop"
                android:src="@color/colorAccent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#222"
            android:textSize="16sp"
            cost="@{data.narxi}"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toEndOf="@+id/cardView2"
            app:layout_constraintTop_toTopOf="@+id/cardView2"
            android:text="100.000 SUM" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1"
            android:background="@drawable/background_radius_filled_stroke"
            android:backgroundTint="#00BFA5"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/grid_1"
            android:paddingVertical="2dp"
            app:layout_constraintStart_toStartOf="@+id/textView31"
            app:layout_constraintTop_toBottomOf="@+id/textView31">

            <TextView
                android:id="@+id/textView26"
                discount="@{data}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:foreground="@drawable/strike_through_drawable"
                android:foregroundTint="@color/white"
                android:text="125.000 SUM"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView16"
                percent="@{data.discount}"
                percentChange="@{true}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/AliBlackText"
                android:textSize="12sp"
                tools:text="-15%" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:background="#1000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Nechi dona:"
            android:textColor="#666"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <ImageView
                android:id="@+id/decrease_count_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/background_radius_filled"
                android:backgroundTint="#1000"

                android:padding="@dimen/grid_1"
                android:src="@drawable/zoom_minus"
                app:tint="#666" />

            <TextView
                android:id="@+id/count_view"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/grid_2"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/grid_0_5"
                android:text="1"
                android:textColor="#333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/increase_count_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/background_radius_filled"
                android:backgroundTint="#1000"
                android:padding="@dimen/grid_1"
                android:src="@drawable/zoom_plus"
                app:tint="#666" />
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f2f2f2"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

        <include
            android:id="@+id/dostavka_layout"
            layout="@layout/dostavka_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

        <FrameLayout
            android:id="@+id/frameLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="18dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/buy_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="12dp"
                android:background="@drawable/background_radius_filled"
                android:backgroundTint="@color/A_orange"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:text="Sotib olish"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>