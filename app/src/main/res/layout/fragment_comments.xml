<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:isScrollContainer="true"
        android:backgroundTint="?attr/colorBackground"
        android:background="@drawable/bottom_sheet_radius_background"
        >
        <include
            android:id="@+id/action_bar"
            layout="@layout/bottom_sheet_header"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            />

        <include
            android:id="@+id/comments_bottom_nav"
            layout="@layout/comments_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            />
    </FrameLayout>
</layout>