<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/yuklash_scrollview"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <include layout="@layout/action_bar" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/grid_1_5"
                android:paddingBottom="100dp">

                <include
                    layout="@layout/yuklash_contact_info_layout"
                    android:id="@+id/yuklash_contact_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toBottomOf="@id/contact_info_textView_yuklash" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Title"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="1dp"
                    app:hintEnabled="false"
                    app:counterEnabled="true"
                    app:errorEnabled="true"
                    app:counterMaxLength="80"
                    app:endIconCheckable="true"
                    app:endIconMode="clear_text"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/title_inputLayout"
                    app:layout_constraintTop_toBottomOf="@+id/textView20">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/product_title_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masalan: Iphone xs max"
                        android:textColorHint="#8A8A8A" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/category_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:text="Kategoriya"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/optsiya_qoshish_recylerView" />

                <TextView
                    android:id="@+id/contact_info_textView_yuklash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:text="Kontakt info"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/category_editText"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/category_editText"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:boxStrokeWidth="1dp"
                    app:hintEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_textView">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/product_katergotiya_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masalan: Telefonlar" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_inputLayout" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="1dp"
                    android:layout_marginTop="12dp"
                    app:hintEnabled="false"
                    app:counterEnabled="true"
                    app:counterMaxLength="9000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView21">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/product_description_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:gravity="top"
                        android:hint="Masalan: Hozirgi kundagi eng yaxshi va zamonavi"
                        android:minHeight="120dp"
                        android:singleLine="false"
                        android:textColorHint="#8A8A8A" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="1dp"
                    android:layout_marginTop="12dp"
                    app:hintEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView23">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/product_narxi_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:gravity="top"
                        android:textColorHint="#8A8A8A"
                        android:inputType="number|text"
                        android:minWidth="200dp"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textInputLayout3"
                    app:layout_constraintStart_toEndOf="@+id/textInputLayout3"
                    android:layout_marginStart="18dp"
                    app:layout_constraintTop_toTopOf="@+id/textInputLayout3"

                    android:layout_marginLeft="18dp">

                    <AutoCompleteTextView
                        android:id="@+id/choose_currency_yuklash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:text="UZS"
                        android:fontFamily="@font/open_sans_semi_bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Photos"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Narxi"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rasmlar_container" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Soni"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" />

                <FrameLayout
                    android:id="@+id/rasmlar_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView22"
                    tools:layout_editor_absoluteX="18dp">

                    <include layout="@layout/add_photo_layout" />
                </FrameLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="1dp"
                    app:hintEnabled="false"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/product_soni_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:gravity="top"
                        android:text="1"
                        android:inputType="number"
                        android:minWidth="200dp"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Optsiya"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/optsiya_qoshish_recylerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView25"
                    tools:listitem="@layout/optisya_qoshish_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/produkt_yuklash_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Yuklash"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#72DA2F"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="18dp" />
        </LinearLayout>
    </ScrollView>
</layout>