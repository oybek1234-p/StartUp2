<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_12"
        android:paddingVertical="8dp"
        >

        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="@string/header_title"
            android:textColor="?attr/colorOnSurfaceHigh"
            style="@style/Headline3_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/header_subtitle"
            android:textColor="?attr/colorOnSurfaceMedium"
            style="@style/Subtitle1_14"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dimen_2"
            app:layout_constraintTop_toBottomOf="@+id/title_view" />

        <ImageView
            android:id="@+id/icon_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_more"
            android:rotation="-90"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="?attr/colorOnSurfaceMedium" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>