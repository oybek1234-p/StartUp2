<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.example.market.home.MainCategory" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <com.example.market.viewUtils.ImageViewLoader
            android:id="@+id/home_main_category_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/oval_grey"
            android:scaleType="centerCrop"
            url="@{data.photo}"
            circleCrop="@{true}"
            fade="@{true}"
            />

        <TextView
            android:id="@+id/home_main_category_textview"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:text="Kategoriya"
            android:textSize="14sp"
            android:textColor="#202020"
            android:maxLines="2"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:text="@{data.title}"
            android:fontFamily="@font/roboto_medium" />
    </LinearLayout>
</layout>