<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.example.market.model.Product" />
        <import type="com.example.market.utils.DrawablesKt"/>
        <import type="com.example.market.binding.BindingAdaptersKt"/>


    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/grid_1"
        app:cardElevation="0.1dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:id="@+id/limitied_offer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginVertical="@dimen/grid_0_5"
                android:background="@drawable/home_top_background"
                android:padding="@dimen/grid_0_5"
                android:text="@string/top_rated"
                android:textColor="#FF4747"
                android:textSize="11sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_textView_home" />

            <com.example.market.viewUtils.MeasureText
                android:id="@+id/title_textView_home"
                style="@style/ProductTitleStyle"
                android:layout_marginHorizontal="@dimen/grid_1"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:text="@{data.title}"
                android:ellipsize="end"
                android:breakStrategy="simple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_home"
                tools:text="Leather Men Shoes Sneakers Trend Casual Shoe Italian Breathable Leisure Male Sneakers Non-slip Footwear Men Vulcanized Shoes " />

            <com.example.market.viewUtils.MeasureText
                android:id="@+id/discount_textView_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxWidth="100dp"
                discount="@{data}"
                style="@style/ProductDiscountStyle"
                android:background="@drawable/strike_through_drawable"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/grid_1"
                android:breakStrategy="simple"
                app:layout_constraintTop_toBottomOf="@+id/narxi_textView_home"
                tools:text="100 000 000 000 sum" />

            <com.example.market.viewUtils.MeasureText
                android:id="@+id/discount_percent_textView_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ProductDiscountStyle"
                android:layout_marginStart="@dimen/grid_0_5"
                android:textColor="@color/A"
                percent="@{data.discount}"
                percentChange="@{true}"
                android:breakStrategy="simple"
                app:layout_constraintBottom_toBottomOf="@+id/discount_textView_home"
                app:layout_constraintStart_toEndOf="@+id/discount_textView_home"
                app:layout_constraintTop_toTopOf="@+id/discount_textView_home"
                tools:text="-20%" />

            <com.example.market.viewUtils.MeasureText
                android:id="@+id/dostavka_textView_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ProductShippingStyle"
                android:padding="@dimen/grid_0_5"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginTop="@dimen/grid_1"
                android:background="#F6F6F6"
                android:breakStrategy="simple"
                shipping="@{data.dostavka}"
                app:layout_constraintHorizontal_bias="0.005"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/discount_textView_home"
                tools:text="+ Shipping: UZS 33,633.00" />

            <com.example.market.viewUtils.ImageViewLoader
                android:id="@+id/imageView_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                url="@{data.photo}"
                aspectRatio="@{data.scaleRatio}"
                thumbnail="@{true}"
                fade="@{true}"
                android:scaleType="fitXY"
                android:background="#F8F8F8"
                android:contentDescription="@string/imageviewproduct"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/user_photo"
                url="@{data.photo}"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/grid_1_5"
                android:layout_marginEnd="@dimen/grid_1"
                android:background="@drawable/oval_drawable_stroke"
                android:backgroundTint="@color/white"
                circleCrop="@{true}"
                android:visibility="gone"
                android:contentDescription="@string/imageviewproduct"
                android:padding="1dp"
                app:layout_constraintBottom_toTopOf="@+id/like_view"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/narxi_textView_home"
                style="@style/ProductPriceStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1"
                android:maxLines="1"
                cost="@{data.narxi}"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/grid_2"
                android:breakStrategy="simple"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/limitied_offer_textview"
                tools:text="UZS 1 000 000 " />

            <TextView
                android:id="@+id/like_view"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/grid_1"
                android:drawableTop="@drawable/heart_confetti"
                android:gravity="center"
                android:shadowColor="#B4616161"
                android:shadowDx="0"
                android:visibility="gone"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@{String.valueOf(data.likesCount)}"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/comment_view"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="2" />


            <TextView
                android:id="@+id/comment_view"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/grid_0_5"
                android:text="@{String.valueOf(data.commentCount)}"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/title_textView_home"
                app:layout_constraintEnd_toEndOf="parent"
                android:shadowDy="1"
                android:shadowDx="0"
                android:visibility="gone"
                android:shadowColor="#B4616161"
                android:shadowRadius="1"
                android:layout_margin="@dimen/grid_1"
                tools:text="10"
                app:drawableTopCompat="@drawable/menu_support2" />

            <TextView
                android:id="@+id/user_name_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/grid_1"
                android:gravity="start"
                android:paddingStart="@dimen/grid_1"
                android:paddingEnd="@dimen/grid_3"
                android:maxLines="1"
                android:ellipsize="end"
                android:shadowColor="#B4616161"
                android:visibility="gone"
                android:shadowDx="0"
                android:text="@{BindingAdaptersKt.hashTag(data.sellerId)}"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/title_textView_home"
                app:layout_constraintEnd_toStartOf="@+id/comment_view"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="10" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>