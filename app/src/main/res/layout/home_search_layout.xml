<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="18dp"
    android:paddingVertical="@dimen/grid_1"
    android:background="#FDFDFD"
    android:clipToPadding="false"
    android:layout_height="56dp">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="45dp"
    android:background="@drawable/home_search_background"
    >

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:src="@drawable/iconicsearch"
        android:layout_gravity="end"
        android:padding="6dp"
        android:layout_margin="4dp"
        android:background="@drawable/home_search_icon_background"
        app:tint="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nima_qidiryapsiz"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/grid_2"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="#959595" />
</FrameLayout>
</FrameLayout>