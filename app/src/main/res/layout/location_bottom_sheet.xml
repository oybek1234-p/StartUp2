<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">
        <View
            android:layout_width="84dp"
            android:layout_height="6dp"
            android:background="@drawable/background_radius_filled"
            android:backgroundTint="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/grid_1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:orientation="vertical"
            android:background="@drawable/bottom_sheet_background"
            android:backgroundTint="#FFFFFF"
            android:elevation="34dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1"
                android:background="@drawable/background_radius_filled_16"
                android:backgroundTint="#94E4E4E4"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dot_drawable_view"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dot_oval_drawable"
                    app:layout_constraintBottom_toBottomOf="@+id/location_adress_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/location_adress_view" />

                <TextView
                    android:id="@+id/location_adress_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="18dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:maxLines="1"
                    android:text="@string/zangiota_daliguzar_10_uy"
                    android:textColor="#222"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/dot_oval_drawable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/progressBar"
                    app:layout_constraintStart_toEndOf="@+id/dot_drawable_view"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2" />
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_layout"
                app:shimmer_auto_start="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shipping_types_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/grid_1_5"
                    android:layout_marginHorizontal="18dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/grid_2"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/textView30"
                    tools:itemCount="10"
                    tools:listitem="@layout/shipping_offer_item" />

            </com.facebook.shimmer.ShimmerFrameLayout>
            <FrameLayout
                android:id="@+id/continue_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/spacing_12"
                android:background="@color/white">

                <Button
                    android:id="@+id/continue_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="18dp"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/AliOrange"
                    android:layout_marginBottom="@dimen/grid_1"
                    />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</layout>