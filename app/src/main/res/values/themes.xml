        <item name="colorPrimary">#3F83B0</item>
        <item name="colorPrimaryVariant">#356D92</item>

        <item name="colorSecondary">#4FA9E7</item>
        <item name="colorSecondaryVariant">#21BBEF</item>

        <item name="colorControlActivated">#4FA9E7</item>
        <item name="colorBackground">#F2F2F2</item>
        <item name="colorOnBackground">#7E858E</item>

        <item name="colorSurfaceVariant">@color/white</item>

        <item name="colorOnSurface">#BEC1C6</item>
        <item name="colorOnSurfaceHigh">@color/black</item>
        <item name="colorOnSurfaceMedium">#4B4B4B</item>
        <item name="colorOnSurfaceLow">#7E858E</item>
        <item name="colorOnSurfaceUltraLow">#BEC1C6</item>

        <item name="colorOnPrimaryHigh">@color/white</item>
        <item name="colorOnPrimaryMedium">#E4EEF7</item>

        <item name="colorOnSecondaryHigh">@color/white</item>
        <item name="colorOnSecondaryMedium">#E4EEF7</item>

        <item name="android:statusBarColor">#356D92</item>
        <item name="colorYellow">#FBB22E</item>
        <item name="colorOrange">#F48F38</item>
        <item name="colorGreen">#53B94B</item>
        <item name="colorRed">#F35250</item>
        <item name="colorPink">#D978A3</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StartUp2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="colorPrimary">#222E3C</item>
        <item name="colorPrimaryVariant">#1A222D</item>

        <item name="android:statusBarColor">#1A222D</item>

        <item name="colorOnSurface">#8995A1</item>
        <item name="colorSecondary">#4FA9E7</item>
        <item name="colorSecondaryVariant">#619DD0</item>

        <item name="colorBackground">#151E27</item>
        <item name="colorOnBackground">#8995A1</item>

        <item name="colorSurface">#1D2733</item>
        <item name="colorSurfaceVariant">#1D2733</item>

        <item name="colorOnSurfaceHigh">@color/white</item>
        <item name="colorOnSurfaceMedium">#8995A1</item>
        <item name="colorOnSurfaceLow">#8995A1</item>
        <item name="colorOnSurfaceUltraLow">#8995A1</item>

        <item name="colorOnPrimaryHigh">@color/white</item>
        <item name="colorOnPrimaryMedium">#D5D6DB</item>

        <item name="colorOnSecondaryHigh">@color/white</item>
        <item name="colorOnSecondaryMedium">#D5D6DB</item>

        <item name="colorYellow">#FBB22E</item>
        <item name="colorOrange">#F48F38</item>
        <item name="colorGreen">#53B94B</item>
        <item name="colorRed">#F35250</item>
        <item name="colorPink">#D978A3</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="BottomSheetTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@null</item>
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_open_animation</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_close_animation</item>
    </style>

    <style name="BottomSheetLayoutStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeTopRight">18dp</item>
    </style>

    <style name="circleImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="radiusImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>

    </style>

    <style name="circleImageViewStyleBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">2dp</item>

    </style>

</resources>